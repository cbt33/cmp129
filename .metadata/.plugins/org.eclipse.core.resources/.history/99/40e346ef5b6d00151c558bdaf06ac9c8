package car_project;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.nio.file.Path;

public class CarDealerShip {
	
	private Car[] cars;
	private int numCars;
	
	//Default constructor, generates object from formatted text file
	public CarDealerShip(String filename) throws FileNotFoundException, IOException, CarException {
		FileReader in = new FileReader("carList.txt");
		BufferedReader br = new BufferedReader(in);
		String make, year, vin, price;
		if ( (make = br.readLine()) != null) {
			 year = br.readLine();
			 price = br.readLine();
			 vin = br.readLine();
			 Car car = new Car(Integer.parseInt(year), 
					 Double.parseDouble(price), 
					 make, vin);
			 System.out.println(car);
			 this.Add(car);
			 }
		br.close();
		in.close();
		}

	
	//Adds car to cars
	public void Add(Car car) {
		numCars++;
		cars[numCars] = car;
	}
	
	//Delete the last car added from cars
	//public boolean Delete() {}
	
	//Outputs each car in cars
	//public String toString() {}
	
	//Writes cars into a text file before closing
	@Override
	protected void finalize() {}
	
}
